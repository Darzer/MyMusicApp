@model IEnumerable<MyMusicApp.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Song", "Index", new { sortOrder = ViewBag.SongSort })
        </th>
        <th>
            @Html.ActionLink("Album", "Index", new { sortOrder = ViewBag.AlbumSort })
        </th>
        <th>
            @Html.ActionLink("Artist", "Index", new { sortOrder = ViewBag.ArtistSort })
        </th>
        <th>
            @Html.ActionLink("Duration", "Index", new { sortOrder = ViewBag.DurationSort })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Album.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.ConcatNames)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrackLength)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
